<Window x:Class="Kalkulator_Kalorii.MVVM.View.Kalkulator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalkulator_Kalorii.MVVM.View"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Kalkulator" Height="450" Width="800">

    <Border Background="#272537"
            CornerRadius="20" BorderThickness="0">
        <DockPanel x:Name="RootWindow" MouseDown="TitleBar_MouseDown">
            <DockPanel x:Name="TitleBar" DockPanel.Dock="Top">
                <Button x:Name="CloseButton" Content="X" Padding="2"
                    Click="CloseButton_Click"
                    DockPanel.Dock="Right" Background="Transparent" />
                <Button x:Name="MaxButton" Content="◰"
                    Click="MaximizeButton_Click"
                    DockPanel.Dock="Right" Background="Transparent" />
                <Button x:Name="MinButton" Content=" _ " Padding="2"
                    Click="MinimizeButton_Click"
                    DockPanel.Dock="Right" Background="Transparent" />


                <TextBlock Width="Auto" ></TextBlock>
            </DockPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <DatePicker x:Name="data" Grid.Column="1" HorizontalAlignment="Left" Margin="32,10,0,0" VerticalAlignment="Top" Height="55" Width="273"/>
                <ComboBox x:Name="Typ_posilku" IsEditable="True" Focusable="False" IsReadOnly="True" Text="Wybierz posiłek" Grid.Column="1" HorizontalAlignment="Left" Margin="59,43,0,0" Grid.Row="1" VerticalAlignment="Top" Width="187" Height="30">
                    <ComboBoxItem Content="Śniadanie"/>
                    <ComboBoxItem Content="Lunch"/>
                    <ComboBoxItem Content="Obiad"/>
                    <ComboBoxItem Content="Podwieczorek"/>
                    <ComboBoxItem Content="Kolacja"/>
                </ComboBox>
                <Button x:Name="Dodanie_posilku" Content="Dodaj" Grid.Column="1" HorizontalAlignment="Left" Margin="434,275,0,0" Grid.Row="1" VerticalAlignment="Top" Width="107" Height="40" Click="Click_dodanie_posilku"/>
                <Label Content="xxxx/2200 kcal" Grid.Column="1" HorizontalAlignment="Left" Height="55" Margin="416,10,0,0" VerticalAlignment="Top" Width="146" FontFamily="Constantia" FontSize="16"/>
                <TextBox x:Name="Dany_posilek" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="59,101,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Wpisz posiłek" VerticalAlignment="Top" Width="187" TextChanged="TextBox_TextChanged"/>
                <TextBox x:Name="Waga_posilku" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="273,101,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Waga [g]" VerticalAlignment="Top" Width="100"/>
                <TextBox x:Name="Woda_ml_" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="59,154,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Woda [ml]" VerticalAlignment="Top" Width="187" TextChanged="TextBox_TextChanged_1"/>
                <Label Content="xxxx/2083 ml" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="273,154,0,0" Grid.Row="1" VerticalAlignment="Top" Width="187" FontFamily="Constantia" FontSize="15"/>
                <ComboBox x:Name="Nazwa_aktywnosci" IsEditable="True" Focusable="False" IsReadOnly="True" Text="Wybierz aktywność" Grid.Column="1" HorizontalAlignment="Left" Margin="59,206,0,0" Grid.Row="1" VerticalAlignment="Top" Width="187" Height="30">
                    <ComboBoxItem Content="Rower"/>
                    <ComboBoxItem Content="Bieganie"/>
                    <ComboBoxItem Content="Basen"/>
                    <ComboBoxItem Content="Spacer"/>
                    <ComboBoxItem Content="Wysiłek siłowy"/>
                </ComboBox>
                <TextBox x:Name="czas_aktywnosci" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="273,206,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Czas" VerticalAlignment="Top" Width="187"/>
                <Button Content="Historia" HorizontalAlignment="Left" Margin="35,162,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="130" Click="Button_Click_1"/>
                <Button Content="Menu" HorizontalAlignment="Left" Margin="35,86,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="130" Click="Button_Click"/>
                <Border BorderBrush="#FF13121B" BorderThickness="2,2,2,0.8" HorizontalAlignment="Left" Height="339" VerticalAlignment="Top" Width="4" Grid.Row="1" Margin="196,10,0,0" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.011"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>
                <Image HorizontalAlignment="Left" Height="75" Margin="10,10,0,0" VerticalAlignment="Top" Width="62" Source="kaloeri BIOŁY.png" Grid.RowSpan="2"/>
                <TextBox x:Name="kcal_posilku" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="403,101,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Kalorie [kcal]" VerticalAlignment="Top" Width="100"/>
                <Label Content="Obecny użytkownik:" HorizontalAlignment="Left" Margin="24,256,0,0" VerticalAlignment="Top" Height="25" Width="116" Grid.Row="1"/>
                <Label x:Name="Nazwa_obecnego_uzytkownika" Content="" HorizontalAlignment="Left" Margin="23,292,0,0" VerticalAlignment="Top" Height="38" Width="117" Grid.Row="1"/>
            </Grid>
        </DockPanel>

    </Border>
</Window>

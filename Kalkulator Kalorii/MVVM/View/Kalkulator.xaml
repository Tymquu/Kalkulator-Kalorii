<Window x:Class="Kalkulator_Kalorii.MVVM.View.Kalkulator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalkulator_Kalorii.MVVM.View"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Kalkulator" Height="450" Width="800">

    <Border Background="#272537"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Wrzucić tu zdj&#xD;&#xA;Kalulatora czy coś" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top" Width="130" Background="White"/>
            <DatePicker Grid.Column="1" HorizontalAlignment="Left" Margin="32,10,0,0" VerticalAlignment="Top" Height="55" Width="273"/>
            <ComboBox Text="Wybierz posiłek" Grid.Column="1" HorizontalAlignment="Left" Margin="32,25,0,0" Grid.Row="1" VerticalAlignment="Top" Width="136" Height="25">
                <ComboBoxItem Content="Śniadanie"/>
                <ComboBoxItem Content="Lunch"/>
                <ComboBoxItem Content="Obiad"/>
                <ComboBoxItem Content="Podwieczorek"/>
                <ComboBoxItem Content="Kolacja"/>
            </ComboBox>
            <Button Content="Dodaj" Grid.Column="1" HorizontalAlignment="Left" Margin="434,275,0,0" Grid.Row="1" VerticalAlignment="Top" Width="107" Height="40"/>
            <Label Content="xxxx/2200 kcal" Grid.Column="1" HorizontalAlignment="Left" Height="55" Margin="416,10,0,0" VerticalAlignment="Top" Width="146"/>
            <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="32,73,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Wpisz posiłek?&#xD;&#xA;Posiłki z podpowiedziami" VerticalAlignment="Top" Width="136" TextChanged="TextBox_TextChanged"/>
            <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="187,73,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Ile ma gram" VerticalAlignment="Top" Width="136"/>
            <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="32,117,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Woda ile ml" VerticalAlignment="Top" Width="136"/>
            <Label Content="xxxx/2083 ml" Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="187,117,0,0" Grid.Row="1" VerticalAlignment="Top" Width="136"/>
            <ComboBox Text="Wybierz aktywność fizyczną" Grid.Column="1" HorizontalAlignment="Left" Margin="32,160,0,0" Grid.Row="1" VerticalAlignment="Top" Width="136" Height="25"/>
            <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="187,160,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Czas" VerticalAlignment="Top" Width="136"/>
            <Button Content="Historia" HorizontalAlignment="Left" Margin="35,162,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="130" Click="Button_Click_1"/>
            <Button Content="Menu" HorizontalAlignment="Left" Margin="35,86,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="130" Click="Button_Click"/>
        </Grid>

    </Border>
</Window>
